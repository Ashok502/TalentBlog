<h1>
  Blogs
  <%= link_to "New Blog", new_blog_path, class: 'btn btn-sm btn-default pull-right' %>
</h1>
<hr />
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each_with_index do |article, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= article.title %></td>
        <td><%= article.status %></td>
        <td>
          <%= link_to "Edit", edit_blog_path(article), class: 'btn btn-sm btn-warning' %> |
          <%= link_to "Delete", blog_path(article), method: :delete, data: {confirm: "Are you Sure!"}, class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>